{% extends 'base.html.twig' %}

{% block main %}

	<section class="py-5 text-center container">
		<div class="row py-lg-5">
			<div class="col-lg-6 col-md-8 mx-auto">
				<h1 class="fw-bold">Create new content</h1>

			</div>
		</div>
	</section>
	<main>
		<div class="py-5 bg-light">
			<div class="container">
				<form method="post" enctype="multipart/form-data">
					<div class="card mt-2" style="max-width: 1wm;">
						<div class="row g-0 shadow p-3 bg-body-tertiary rounded">
							<div class="col-md-12 ">
								<div class="card-body d-flex">
									<div class="col-md-8 me-2">

										<label class="card-title">Title:</label>
										<input type="text" name="title_add" value="" class="form-control" placeholder="Title leave a here...">
									</div>
									<div class="col-md-4 ms-auto">
										<label class="card-title">Photo</label>
										<input type="file" class="form-control g-3" name="photo">
									</div>
								</div>
								<div class="col-md-12">
									<div class="card-body">
										<label class="card-title">Text:</label>
										<textarea class="form-control" placeholder="Blog description leave a here..." name="text_des" rows="11" cols="auto" value=""></textarea>
									</div>
								</div>
								<div class="list-table d-flex d-grid gap-2 d-sm-flex justify-content-sm-end me-3">
									<a href="{{ path('home') }}" type="button" class="btn btn-secondary px-4">Back</a>

									<button type="submit" class="btn btn-success d-flex align-content-end px-4 gap-3" name="save">Create</button>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</main>
{% endblock %}
