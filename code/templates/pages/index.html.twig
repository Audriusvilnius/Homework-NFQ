{% extends 'base.html.twig' %}

{% block main %}
	<section class="py-5 text-center container">
		<div class="row py-lg-5">
			<div class="col-lg-6 col-md-8 mx-auto">
				<h1 class="fw-bold">Homepage</h1>
			</div>
		</div>
	</section>
	<main>
		<div class="py-5 bg-light">
			<div class="container">
				<div class="d-grid gap-2 d-sm-flex justify-content-sm-end mb-5">
					<a href="{{ path('article_create') }}" type="button" class="btn btn-outline-dark btn-lg px-4 gap-3">Add Post</a>

				</div>
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
					{% for article in articles %}
						<div class="col d-flex justify-content-md-between">
							{% include '_partials/article-card.html.twig' with {
                                article: article
                            } %}
						</div>
					{% endfor  %}
				</div>
			</div>
		</div>
	</main>
{% endblock %}
